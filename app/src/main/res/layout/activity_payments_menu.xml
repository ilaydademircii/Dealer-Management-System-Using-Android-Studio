<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.PaymentsMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/receivingPaymentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="onReceivingPaymentButtonButtonClick"
            android:text="Ödeme Alış"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/allRemainingPaymentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="onAllRemainingPaymentButtonClick"
            android:text="Kalan Ödemeler"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/paymentsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="onPaymentButtonClick"
            android:text="Geçmiş Ödemeler"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>
</RelativeLayout>