<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.VehiclesMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/button_ikinci_el_arac_alim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="onIkinciElAracAlimButtonClick"
            android:text="İkinci El Araç Alım"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_sifir_arac_alim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="onSifirAracAlimButtonClick"
            android:text="Sıfır Araç Alım"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_takas_arac_alim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="onTakasAracAlimButtonClick"
            android:text="Takas Araç Alım"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_satis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onSatisButtonClick"
            android:text="Satış"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>